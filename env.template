# ============================================
# Environment Variables for Prepaid Platform
# ⚠️  이 파일을 복사해서 .env 파일을 만드세요!
# ⚠️  .env 파일은 Git에 커밋하지 마세요!
# ============================================

# Database
DB_URL=jdbc:postgresql://localhost:5433/prepaid_db
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=prepaid_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:29092

# JWT (Generate a secure random value for production)
# 프로덕션에서는 최소 256bit 이상의 랜덤 문자열 사용
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-must-be-very-long
JWT_EXPIRATION=1800000
JWT_REFRESH_EXPIRATION=604800000

# ============================================
# OAuth2 - Naver Login
# ============================================
# 네이버 개발자 센터에서 발급: https://developers.naver.com/apps/
# 1. 애플리케이션 등록
# 2. 서비스 API -> 네이버 로그인 설정
# 3. Callback URL: http://localhost:8080/login/oauth2/code/naver
NAVER_CLIENT_ID=YOUR_NAVER_CLIENT_ID_HERE
NAVER_CLIENT_SECRET=YOUR_NAVER_CLIENT_SECRET_HERE

# ============================================
# Toss Payments
# ============================================
# Toss Payments 개발자 센터에서 발급: https://developers.tosspayments.com/
# 1. 내 개발정보 -> API 키 발급
# 2. 테스트 모드 키 사용 (test_sk_, test_ck_)
TOSS_CLIENT_KEY=test_ck_YOUR_CLIENT_KEY_HERE
TOSS_SECRET_KEY=test_sk_YOUR_SECRET_KEY_HERE

# Toss API Base URL (변경 불필요)
TOSS_API_URL=https://api.tosspayments.com/v1/payments
