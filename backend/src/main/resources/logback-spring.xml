<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Local 프로파일: 텍스트 로그 (개발 환경) -->
    <springProfile name="local,default">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %clr([%thread]){faint} %clr(%-5level) %clr(%logger{36}){cyan} %clr(-){faint} %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
        
        <!-- 특정 패키지 로그 레벨 조정 -->
        <logger name="com.prepaid" level="DEBUG"/>
        <logger name="org.springframework.kafka" level="INFO"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    </springProfile>

    <!-- Production 프로파일: JSON 로그 (운영 환경) -->
    <springProfile name="prod">
        <!-- 콘솔 JSON 출력 -->
        <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <!-- 표준 필드 -->
                <includeContext>true</includeContext>
                <includeMdcKeyName>traceId</includeMdcKeyName>
                <includeMdcKeyName>spanId</includeMdcKeyName>
                
                <!-- 비즈니스 컨텍스트 필드 -->
                <includeMdcKeyName>userId</includeMdcKeyName>
                <includeMdcKeyName>txType</includeMdcKeyName>
                <includeMdcKeyName>amount</includeMdcKeyName>
                <includeMdcKeyName>orderId</includeMdcKeyName>
                <includeMdcKeyName>paymentKey</includeMdcKeyName>
                
                <!-- 커스텀 필드 추가 -->
                <customFields>{"env":"production","service":"prepaid-wallet"}</customFields>
                
                <!-- 타임스탬프 형식 -->
                <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampPattern>
            </encoder>
        </appender>
        
        <!-- 파일 JSON 출력 (Filebeat 수집용) -->
        <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/application.log</file>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeContext>true</includeContext>
                <includeMdcKeyName>traceId</includeMdcKeyName>
                <includeMdcKeyName>spanId</includeMdcKeyName>
                <includeMdcKeyName>userId</includeMdcKeyName>
                <includeMdcKeyName>txType</includeMdcKeyName>
                <includeMdcKeyName>amount</includeMdcKeyName>
                <includeMdcKeyName>orderId</includeMdcKeyName>
                <includeMdcKeyName>paymentKey</includeMdcKeyName>
                <customFields>{"env":"production","service":"prepaid-wallet"}</customFields>
                <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampPattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>
        </appender>
        
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE" />
            <appender-ref ref="JSON_FILE" />
        </root>
        
        <!-- 운영 환경에서는 SQL 로그 비활성화 -->
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="com.prepaid" level="INFO"/>
    </springProfile>
    
    <!-- Dev 프로파일: JSON + 텍스트 혼합 (테스트 환경) -->
    <springProfile name="dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId:-}] [%thread] %-5level %logger{36} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
        
        <logger name="com.prepaid" level="DEBUG"/>
    </springProfile>
</configuration>
